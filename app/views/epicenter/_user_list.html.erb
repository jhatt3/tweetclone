<div class="row">
        <% @users.each do |user| %>
          <div class="col-md-6">
            <div class="well">
              <div class="row">
                <div class="col-md-6">
                    <% if user.avatar.url %>
                        <%= image_tag user.avatar.url, width: 150, class: "img-responsive" %>
                    <% end %>
                </div>
                <div class="col-md-6">
                  <br>
                  <p>
                    <% if current_user.id != user.id %>
                      <% if current_user.following.include?(user.id) %>
                        <%= link_to "Following", unfollow_path(id: user.id), class: "btn btn-primary", id: "unfollow_btn" %>
                      <% else %>
                        <%= link_to "Follow", now_following_path(id: user.id), class: "btn btn-primary" %>
                      <% end %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="row">
                <div id='user_well'>
                <%= link_to show_user_path(id: user.id) do %>
                  <h3><%= user.name.capitalize %></h3>
                  <p>@<%= user.username %></p>
                  
                <% end %>
                <p>
                  <%= user.bio %>
                </p>
                <%= link_to 'Followers', followers_path(id: user.id), class: 'btn btn-xs btn-info' %>
                <%= link_to 'Following', following_path(id: user.id), class: 'btn btn-xs btn-info' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>